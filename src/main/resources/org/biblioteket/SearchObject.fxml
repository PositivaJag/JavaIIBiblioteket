<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteket.SearchObjectController">
   <children>
      <VBox>
         <children>
            <Label text="Skriv in sökord här:  ">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="searchField" prefHeight="25.0" prefWidth="244.0" promptText="sök">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="buttonSearch" mnemonicParsing="false" onAction="#clickButtonSearch" prefHeight="25.0" prefWidth="68.0" text="Sök">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <VBox>
               <children>
                  <Label text="Välj en eller flera">
                     <VBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <CheckBox mnemonicParsing="false" text="Böcker">
                     <VBox.margin>
                        <Insets left="20.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </CheckBox>
                  <CheckBox mnemonicParsing="false" text="Filmer">
                     <VBox.margin>
                        <Insets left="20.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </CheckBox>
                  <CheckBox mnemonicParsing="false" text="Tidskrifter">
                     <VBox.margin>
                        <Insets left="20.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </CheckBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <Label fx:id="labelNoHits" text="Label">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <TableView fx:id="searchTable" prefHeight="400.0" prefWidth="500.0">
         <columns>
            <TableColumn fx:id="columnID" editable="false" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="columnTitel" editable="false" prefWidth="75.0" text="Titel" />
            <TableColumn fx:id="columnTyp" editable="false" prefWidth="75.0" text="Typ" />
            <TableColumn fx:id="columnAuthor" editable="false" prefWidth="75.0" text="Författare" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
